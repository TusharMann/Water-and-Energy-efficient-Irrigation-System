<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context="com.example.tushar.iotbasedirrigation.field">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Field Layout"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/heading"/>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading"
        android:layout_marginTop="0dp"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/image1"
        android:id="@+id/road"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/grid1"
        android:src="@mipmap/image2"
        android:layout_below="@id/heading"
        android:layout_toRightOf="@id/road"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/grid2"
        android:src="@mipmap/image2"
        android:layout_below="@id/heading"
        android:layout_toRightOf="@id/grid1"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/grid3"
        android:src="@mipmap/image2"
        android:layout_below="@id/grid1"
        android:layout_toLeftOf="@id/grid2"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/grid4"
        android:src="@mipmap/image2"
        android:layout_below="@id/grid2"
        android:layout_toRightOf="@id/grid1"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/grid5"
        android:src="@mipmap/image2"
        android:layout_below="@id/grid3"
        android:layout_toLeftOf="@id/grid4"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/grid6"
        android:src="@mipmap/image2"
        android:layout_below="@id/grid4"
        android:layout_toRightOf="@id/grid3"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/grid7"
        android:src="@mipmap/image2"
        android:layout_below="@id/grid5"
        android:layout_toLeftOf="@id/grid6"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/grid8"
        android:src="@mipmap/image2"
        android:layout_below="@id/grid6"
        android:layout_toRightOf="@id/grid5"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/grid9"
        android:src="@mipmap/image2"
        android:layout_below="@id/grid7"
        android:layout_toLeftOf="@id/grid8"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/grid10"
        android:src="@mipmap/image2"
        android:layout_below="@id/grid8"
        android:layout_toRightOf="@id/grid7"
        android:layout_marginLeft="5dp"/>



</RelativeLayout>
